{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile",
    "dockerfilePath": "backend/Dockerfile",
    "context": "backend"
  },
  "deploy": {
    "restartPolicyType": "always",
    "restartPolicyMaxRetries": 5,
    "healthchecks": {
      "enabled": true,
      "cpu": false,
      "memory": false,
      "disk": false
    }
  }
}
